# Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12

# Database
DATABASE_URL=sqlite:///topper_ai_mentor.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/topper_ai_mentor

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# External APIs
TOPPERRANK_LMS_API_URL=https://api.topperrank.com
TOPPERRANK_API_KEY=your-topperrank-api-key
GOOGLE_DRIVE_API_KEY=your-google-drive-api-key

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/

# Voice Service
GOOGLE_SPEECH_API_KEY=your-google-speech-api-key
SPEECH_RECOGNITION_TIMEOUT=10

# Recommendation System
MIN_INTERACTIONS_FOR_RECOMMENDATIONS=5
RECOMMENDATION_CACHE_TTL=3600  # 1 hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
